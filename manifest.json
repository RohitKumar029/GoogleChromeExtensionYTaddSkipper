{
    "manifest_version": 2,
    "name": "Skip YouTube Ads",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "64": "icon64.png"
    },
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}